<div class="container">

	<h1><%= @cocktail.name %></h1>
    
    <p>How to make me:
      <ul>
	    <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %>
          	- 
          	<%= dose.ingredient.name %>
          	-
            <%= link_to "Delete dose", dose_path(dose.id), method: :delete %>
          </li>
        <% end %> 
      </ul>
    </p>

    <%= link_to "Add dose",  new_cocktail_dose_path(@cocktail) %>
    <p><%= link_to "Back to list", cocktails_path %></p>

</div>